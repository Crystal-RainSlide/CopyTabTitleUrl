{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.0.8",
  "default_locale": "en",
  "homepage_url": "https://www.bugbugnow.net/",
  
  "background": {
    "scripts": [
      "js/common.js",
      "js/background.js"
    ],
    "persistent": false
  },
  
  "options_ui": {
    "page": "html/options.html"
  },
  
  "browser_action": {
    "default_title": "__MSG_extensionName__",
    "default_popup": "html/popup.html"
  },
  
  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "tabs",
    "storage"
  ]
}