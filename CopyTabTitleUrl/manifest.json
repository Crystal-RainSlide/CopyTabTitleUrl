{
  "manifest_version": 2,
  "name": "CopyTabTitleUrl",
  "description": "__MSG_extensionDescription__",
  "version": "0.0.4",
  "default_locale": "en",
  "homepage_url": "https://www.bugbugnow.net/",
  "applications": {
    "gecko": {
      "id": "CopyTabTitleUrl@bugbugnow.net"
    }
  },
  
  "background": {
    "scripts": [
      "js/common.js",
      "js/background.js"
    ],
    "persistent": false
  },
  
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "tabs",
    "storage"
  ]
}