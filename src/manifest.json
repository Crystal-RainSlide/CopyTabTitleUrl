{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.0.0",
  "default_locale": "en",
  
  "author": "toshi",
  "homepage_url": "https://www.bugbugnow.net/",
  
  "background": {
    "persistent": false,
    "scripts": [
      "/js/common.js",
      "/js/background.js"
    ]
  },
  
  "options_ui": {
    "page": "/html/options.html"
  },
  
  "browser_action": {
    "default_title": "__MSG_extensionName__",
    "default_popup": "/html/popup.html"
  },
  
  "permissions": [
    "clipboardWrite",
    "tabs",
    "contextMenus",
    "storage"
  ]
}