{
  "manifest_version": 3,
  "name": "CopyTabTitleUrl",
  "description": "Copy the title and URL to the clipboard.",
  "version": "3.0.0",
  
  "author": "toshi",
  "homepage_url": "https://github.com/k08045kk/CopyTabTitleUrl",
  "developer": {
    "name": "toshi",
    "url": "https://github.com/k08045kk"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "CopyTabTitleUrl@bugbugnow.net",
      "strict_min_version": "115.0"
    }
  },
  
  "background": {
    "scripts": [
      "/common.js",
      "/lib/punycode.js/punycode.js",
      "/clipboard.js",
      "/background.js"
    ]
  },
  
  "action": {
    "default_title": "CopyTabTitleUrl",
    "default_icon": {
      "19": "icon/19.png",
      "38": "icon/38.png"
    }
  },
  
  "options_ui": {
    "page": "/options/options.html"
  },
  
  "icons": {
    "16": "icon/16.png",
    "48": "icon/48.png",
    "128":"icon/128.png"
  },
  
  "commands": {
    "shortcut_action": {
      "description": "format1"
    },
    "shortcut_action2": {
      "description": "format2"
    }
  },
  
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "storage",
    "tabs"
  ]
}