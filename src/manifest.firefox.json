{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.4.0",
  "default_locale": "en",
  
  "author": "toshi",
  "homepage_url": "https://www.bugbugnow.net/",
  "developer": {
    "name": "toshi",
    "url": "https://www.bugbugnow.net/"
  },
  "applications": {
    "gecko": {
      "id": "CopyTabTitleUrl@bugbugnow.net"
    }
  },
  
  "background": {
    "scripts": [
      "/js/common.js",
      "/js/background.js"
    ]
  },
  
  "options_ui": {
    "page": "/html/options.html"
  },
  
  "browser_action": {
    "default_title": "__MSG_extensionName__"
  },
  
  "icons": {
    "16": "icon/16.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  
  "commands": {
    "shortcut_action": {
      "description": "shortcut action."
    }
  },
  
  "permissions": [
    "clipboardWrite",
    "tabs",
    "contextMenus",
    "commands",
    "storage"
  ]
}